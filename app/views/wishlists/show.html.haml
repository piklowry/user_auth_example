%h1= @wishlist.name
%h5= @wishlist.description

- @wishlist.items.each do |item|
  %div
    .col-sm-3.col-xs-6
      .productsrow
        .product.menu-category
          .menu-category-name.list-group-item.active= item.name
          .product-image
            %img.product-image.menu-item.list-group-item= image_tag item.photo_pic
          %a.menu-item.list-group-item{:href => "#"}
            = link_to item.name, wishlist_item_path(@wishlist, item)
            %span.badge= item.price


= link_to "Add new item to list", new_wishlist_item_path(wishlist_id: @wishlist.id)